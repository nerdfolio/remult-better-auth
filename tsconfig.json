{
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "bundler",
		"allowSyntheticDefaultImports": true,
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"jsx": "preserve",
		"allowJs": true,
		"strict": true,
		"noEmit": true,
		"declaration": true,
		"experimentalDecorators": true
	},
	"include": ["src/**/*"]
}
